<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseRegistration">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Fill in your Education Details"
        android:textColor="#2d2d4c"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="111dp" />

    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="612dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="108dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:text="Course name"
            android:layout_marginLeft="7dp"
            android:textColor="#62717f"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="172dp" />

        <EditText
            android:id="@+id/coursenameInput"
            android:layout_width="270dp"
            android:layout_height="43dp"
            android:backgroundTint="#edf2f7"
            android:ems="10"
            android:inputType="text"
            android:text=""
            android:background="@drawable/customer_edittext"
            android:paddingLeft="10dp"
            android:textSize="12sp"
            app:cornerRadius="4dp"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="224dp" />

        <TextView
            android:id="@+id/textVieww"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="108dp"
            android:layout_marginBottom="6dp"
            android:paddingTop="20dp"
            android:gravity="center"
            android:text="University"
            android:textColor="#62717f"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="172dp" />

        <EditText
            android:id="@+id/universityInput"
            android:layout_width="270dp"
            android:layout_height="43dp"
            android:backgroundTint="#edf2f7"
            android:ems="10"
            android:background="@drawable/customer_edittext"
            android:hint="university"
            android:inputType="text"
            android:paddingLeft="18dp"
            android:textSize="12sp"
            app:cornerRadius="4dp"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="224dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="122dp"
            android:layout_marginBottom="6dp"
            android:paddingTop="20dp"
            android:text="Role"
            android:textColor="#62717f"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="295dp" />


        <Spinner
            android:id="@+id/roleSpinner"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:background="@drawable/customer_edittext"
            android:backgroundTint="#edf2f7"
            android:paddingLeft="10dp"
            android:textColor="#62717f"
            android:textSize="10sp"
            app:cornerRadius="4dp"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="314dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="6dp"
            android:paddingTop="20dp"
            android:text="Level"
            android:textColor="#62717f"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="379dp" />

        <Spinner
            android:id="@+id/levelSpinner"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:background="@drawable/customer_edittext"
            android:backgroundTint="#edf2f7"
            android:paddingLeft="10dp"
            android:textSize="10sp"
            android:textColor="#62717f"
            app:cornerRadius="4dp"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="414dp" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/purpule"
            android:text="Validate"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:cornerRadius="4dp"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="532dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
